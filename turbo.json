{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SERVER_PRESET"],
  "globalPassThroughEnv": [
    "TMDB_API_TOKEN",
    "KV_REST_API_TOKEN",
    "KV_REST_API_URL"
  ],
  "tasks": {
    "open-api": {
      "outputs": ["**/*.gen.*"]
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".nitro/**", ".tanstack/**", ".vercel/**", ".output/**"]
    },
    "lint": {
      "outputs": [".eslintcache"]
    },
    "format": {},
    "typecheck": {},
    "test": {
      "cache": false,
      "persistent": true
    },
    "coverage": {
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "passThroughEnv": ["CI"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "e2e:ui": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "knip": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
