{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "gen": {
      "dependsOn": ["^gen"],
      "outputs": ["**/*.gen.*"]
    },
    "build": {
      "dependsOn": ["^build", "^gen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^lint", "^gen"],
      "outputs": [".eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "^gen"]
    },
    "test": {
      "dependsOn": ["^gen"],
      "cache": false,
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["^coverage", "^gen"],
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "dependsOn": ["^gen"],
      "passThroughEnv": ["TMDB_API_TOKEN", "SERVER_PRESET"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "dependsOn": ["^gen"],
      "cache": false,
      "persistent": true
    }
  }
}
