{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "format": {
        "glob": "*.{js,ts,mjs,jsx,tsx,json,md,yaml,yml}",
        "run": "pnpm exec prettier --write --cache --log-level silent --experimental-cli . {staged_files}",
        "stage_fixed": true
      },
      "knip": {
        "run": "pnpm exec knip",
        "stage_fixed": true
      },
      "lint": {
        "glob": "*.{js,cjs,ts,tsx}",
        "run": "pnpm exec eslint --fix {staged_files}",
        "stage_fixed": true
      }
    }
  }
}
