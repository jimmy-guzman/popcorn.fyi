{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "cSpell.words": [
    "autodocs",
    "daisyui",
    "devicon",
    "dotenvx",
    "eslintcache",
    "flatrate",
    "gitzy",
    "iconify",
    "knip",
    "lefthook",
    "neondatabase",
    "noninteractive",
    "nvmrc",
    "oktay",
    "pnpx",
    "prefersdark",
    "sonner",
    "subcomponents",
    "tanstack",
    "TMDB",
    "Turborepo",
    "TURSO",
    "UNPOOLED",
    "valibot",
    "vaul",
    "vercel",
    "vinxi",
    "VITE"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ]
}
